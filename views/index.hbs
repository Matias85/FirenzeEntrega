              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ingrese sus datos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>

                  <div class="modal-body">

                    <div class="mb-3">
                      <label for="recipient-name" class="col-form-label">Nombre</label>
                      <input type="text" name="clientes_nombre" class="form-control" id="recipient-name" />
                    </div>
                    <div class="mb-3">
                      <label for="recipient-name" class="col-form-label">Apellido</label>
                      <input type="text" name="clientes_apellido" class="form-control" id="recipient-name" />
                    </div>
                    <div class="mb-3">
